{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Far",
      "type": "clr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "Far.exe",
      "args": [],
      "cwd": "${workspaceRoot}",
      "stopAtEntry": false,
      "console": "externalTerminal"
    },
    {
        "name": "Attach single Far",
        "type": "clr",
        "request": "attach",
        "processName": "Far.exe"
    },
    {
        "name": "Attach selected Far",
        "type": "clr",
        "request": "attach",
        "processId": "${command:pickProcess}"
    }
  ]
}
